@require './config'

body
  font-size: 16px
  background: #eee
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

*, *:before, *:after
  transition: all 0.5s ease-in-out 0.1s
  box-sizing: border-box

*
  cursor: url('../assets/default.cur'),default

a
  cursor: url('../assets/pointer.cur'),pointer


a,a:link,a:visited
    color: #555
    text-decoration: none
    outline: none
    border-bottom: 1px solid #999
    word-wrap: break-word

.table
  display: table
  width: 100%
  height: 100%

.table-cell
  display: table-cell
  vertical-align: middle

#app > div
  display: flex

#main, #sidebar
  padding: 2em

#main
  order: 1
  min-height: 100vh
  margin-left: 38.2%

#sidebar
  background: #444
  width: 38.2%
  position: fixed
  bottom: 0
  top: 0
  text-align: right
  z-index: 9
  .table
    color: #ddd

  .avatar
    border-radius: 50%
    border: 1px solid rgba(255,255,255,.25)
    width: 200px
    height: 200px
    cursor: pointer

  h1
    font-size: 4rem

  a
    border: 0
    color: #ddd
    &:hover img
      transform: rotate(360deg)
